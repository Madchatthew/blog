<%- include('partials/header') %>

    <div id="postcontent">
        <% blogs.forEach(function(blog) { %>
            <div class="ui text container segment">

                <div id="postTitle">
                    <a href="/blogs/<%= blog._id %>"><h2><%= blog.title %></h2></a>
                </div>

                <div class="ui grid">
                    
                    <div class="eight wide column center aligned">
                        <div id="image" class="ui small image">
                            <img src="<%= blog.image %>">
                        </div>
                    </div>

                    <div class="eight wide column">
                        <div id="dateCreated">
                        <span>Created on <%= blog.created.toDateString() %> </span>
                        </div>

                        <div id="postButton">
                            <a href="/blogs/<%= blog._id %>"> <button class="ui button black">Read More</button></a>
                        </div>
                    </div>
                </div>
                
                <div id="postBody">
                    <div>
                        <p><%= blog.body.substring(0, 100) %> . . .</p>
                    </div>
                </div>

            </div>
        <% }) %> 
    </div>
<%- include('partials/footer') %>