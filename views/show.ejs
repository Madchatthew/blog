<%- include('partials/header') %>

<div class="ui main text container segment">
    
    <div class="ui huge header">
        <%= blog.title %>
    </div>
    
    <div class="item">
        <img class="ui medium centered rounded image" src="<%= blog.image %>">
    </div>
    
    <div id="dateCreated" class="content">
        <span>Created on <%= blog.created.toDateString() %> </span>
    </div>
    
    <div class="ui divider"></div>

    <div class="description">
        <p><%- blog.body %></p>
    </div>

    <div class="ui divider"></div>

    <div class="ui grid">
        <div class="eight wide column">
            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>

        <div class="eight wide column right aligned">
            <a href="/blogs/<%= blog._id %>/edit"> <button class="ui button black">Edit Post</button></a>
        </div>
    </div>

</div>

<%- include('partials/footer') %>